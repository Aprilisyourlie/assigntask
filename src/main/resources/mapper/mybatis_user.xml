<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wx.assigntask.dao.UserDao" >

    <!--根据登录信息获取用户信息-->
    <select id="selectUserByLogin"  resultType="com.wx.assigntask.entity.User">
        SELECT * FROM user WHERE username = #{param1} and password = #{param2}
    </select>

    <select id="findUserByUserName" resultType="com.wx.assigntask.entity.User">
        SELECT * FROM user WHERE username = #{param1}
    </select>
</mapper>
