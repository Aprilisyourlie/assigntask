<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wx.assigntask.dao.ItemsDao" >

    <resultMap id="Item" type="com.wx.assigntask.entity.Items">
        <result column="item_id"  property="itemId"></result>
        <result column="item_name"  property="itemName"></result>
        <result column="item_des"  property="itemDes"></result>
    </resultMap>

    <!--根据itemName查询-->
    <select id="findDesByItemName" resultType="String">
        SELECT item_des from items WHERE item_name = #{itemName}
    </select>

</mapper>
